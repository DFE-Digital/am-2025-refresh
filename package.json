{
    "name": "register-of-services",
    "version": "2.0.0",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "dev": "nodemon app.js",
        "build": "npm run build:css && npm run build:js",
        "build:css": "cat app/public/css/dfefrontend-2.0.0.min.css app/public/css/govuk-frontend.min.css app/public/css/manual.css app/public/css/moj-filter.css app/public/css/root.css app/public/css/app-subnav.css app/public/css/app.css > app/public/css/consolidated.min.css",
        "build:js": "cat app/public/js/*.js | grep -v 'govuk-frontend' > app/public/js/consolidated.min.js",
        "lint": "npm run lint:html && npm run lint:links && npm run lint:js",
        "lint:html": "html-validate app/views/**/*.html",
        "lint:links": "markdown-link-check README.md",
        "lint:js": "eslint app.js app/routes.js middleware/",
        "format": "prettier --write '**/*.{js,json,md,html}'",
        "format:check": "prettier --check '**/*.{js,json,md,html}'",
        "validate": "npm run validate:classes && npm run validate:attributes",
        "validate:classes": "grep -r 'class=\"[^\"]*\"' app/views/ | grep -v 'govuk-link govuk-link--no-visited-state' || true",
        "validate:attributes": "grep -r 'href=\"https://' app/views/ | grep -v 'rel=\"noopener noreferrer\"' || true",
        "pre-commit": "npm run lint && npm run validate && npm run format:check"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@ministryofjustice/frontend": "^5.1.0",
        "body-parser": "^1.20.3",
        "compression": "^1.8.0",
        "csurf": "^1.10.0",
        "dfe-frontend": "^2.0.1",
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "fs": "^0.0.1-security",
        "govuk-frontend": "^5.10.0",
        "govuk-markdown": "^0.8.0",
        "marked": "^15.0.7",
        "miller-columns-element": "^2.0.1",
        "notifications-node-client": "^8.2.1",
        "nunjucks": "^3.2.4",
        "nunjucks-date-filter": "^0.1.1",
        "nunjucks-markdown": "^2.0.1",
        "path": "^0.12.7",
        "pg": "^8.16.3",
        "validator": "^13.15.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "browser-sync": "^3.0.4",
        "concurrently": "^9.1.2",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "html-validate": "^8.0.0",
        "husky": "^8.0.3",
        "markdown-link-check": "^3.10.3",
        "nodemon": "^3.1.9",
        "prettier": "^3.0.0"
    }
}
